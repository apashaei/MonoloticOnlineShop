@using Project.Application.BasketServices
@model BasketDto
@{
    Layout = null;
}




    <div class="user-item cart-list">
        <a href="#">
            <i class="fal fa-shopping-basket"></i>

            @if (Model == null)
            {
                <span class="bag-items-number">0</span>
            }
            else{
                <span class="bag-items-number">@Model.Items.Count()</span>

            }
        </a>
        <ul>
            <li class="cart-items">
                <ul class="do-nice-scroll" style="overflow: hidden; outline: none;" tabindex="1">
                  
                    @foreach(var item in Model.Items){
                        <li class="cart-item">
                            <span class="d-flex align-items-center mb-2">
                                <a href="#">
                                <img src="@item.ImageUrl" alt="">
                                </a>
                                <span>
                                    <a href="#">
                                        <span class="title-item">
                                            @item.CatalogName
                                        </span>
                                    </a>
                                    <span class="color d-flex align-items-center">
                                        تعداد:
                                        <span>@item.Quantity</span>
                                    </span>
                                </span>
                            </span>
                            <span class="price">@item.UnitPrice تومان</span>
                             <form method="post" asp-action="RemoveCatalogItem" asp-controller="Basket">
                                                        <input type="hidden" value="@item.CatalogItemId" name="CatalogItemId" />
                            <button class="remove-item">
                                <i class="far fa-trash-alt"></i>
                            </button>
                            </form>
                        </li>
                    
                    }

                </ul>
            </li>
            <li class="cart-footer">
                <span class="d-block text-center mb-3">
                    مبلغ کل:
                    <span class="total">@Model.SumPriceWithoutDiscount().ToString("n0") تومان</span>
                </span>
                <span class="d-block text-center px-2">
                    <a asp-action="Index" asp-controller="Basket" class="btn-cart">
                        مشاهده سبد خرید
                        <i class="mi mi-ShoppingCart"></i>
                    </a>
                </span>
            </li>
            <div id="ascrail2000" class="nicescroll-rails nicescroll-rails-vr" style="width: 8px; z-index: 1000; cursor: default; position: absolute; top: 0px; left: 0px; height: 250px; opacity: 0; display: block;"><div class="nicescroll-cursors" style="position: relative; top: 0px; float: right; width: 6px; height: 213px; background-color: rgb(66, 66, 66); border: 1px solid rgb(255, 255, 255); background-clip: padding-box; border-radius: 5px;"></div></div>
            <div id="ascrail2000-hr" class="nicescroll-rails nicescroll-rails-hr" style="height: 8px; z-index: 1000; top: 242px; left: 0px; position: absolute; cursor: default; display: none; width: 292px; opacity: 0;"><div class="nicescroll-cursors" style="position: absolute; top: 0px; height: 6px; width: 300px; background-color: rgb(66, 66, 66); border: 1px solid rgb(255, 255, 255); background-clip: padding-box; border-radius: 5px; left: 8px;"></div></div>
        </ul>
    </div>
   
